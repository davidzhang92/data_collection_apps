# docker buildx build -t grafana -f grafana_dockerfile .
# docker run -d --name=grafana -p 3200:3000 grafana

FROM grafana/grafana:main AS base
EXPOSE 3200
COPY ./docker/grafana/provisioning/dashboards /etc/grafana/provisioning/dashboards
COPY ./docker/grafana/provisioning/datasources /etc/grafana/provisioning/datasources
COPY ./docker/grafana/grafana.ini /etc/grafana/grafana.ini