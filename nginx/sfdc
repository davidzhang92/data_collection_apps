server {
    listen 3000;
    root /data-storage/sfdc_apps/; # Set to your web app's directory

    location / {
        index login.html;
        try_files $uri $uri/ =404;
        expires 120m;
    }

    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
        expires 30m;
    }
    location /basic_status {
        stub_status;
    }
}


